{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,

    "noImplicitAny": false,
    "noUncheckedIndexedAccess": false,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
